<h1>Edit your patient profile!</h1>


<form method="post" action="/patients/<%=@patient.id%>"> 
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h4>Name: <input type="text" class="form-control" placeholder="Name" name="patient[name]" id="name" value="<%= @patient.name %>"></h4>
    <h4>Address: <input type="text" class="form-control" placeholder="Address" name="patient[adress]" id="adress" value="<%= @patient.adress %>"></h4>
    <h4>Email: <input type="text" class="form-control" placeholder="Email" name="patient[email]" id="email" value="<%= @patient.email %>"></h4>
    <h4>Phone: <input type="text" class="form-control" placeholder="Phone" name="patient[phone]" id="phone" value="<%= @patient.phone %>"></h4>
    <h4>Description: <textarea class="form-control" placeholder="Description" name="patient[description]" id="description" value="<%= @patient.description %>"> </textarea></h4>
    <input type="submit" class="btn btn-primary" id="Add" value="Submit" name="Add">
</form>