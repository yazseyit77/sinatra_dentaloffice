<h1>Edit your appointments here.</h1>

<form method="post" action="/appointments/<%=@app.id%>"> 
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h4>Purpose: <input type="text" class="form-control" placeholder="Purpose of the appointment" name="appointment[purpose]" id="purpose" value="<%= @app.purpose %>"></h4>
    <h4>Dentist ID: <input type="text" class="form-control" placeholder="Dentist ID" name="appointment[dentist_id]" id="dentist_id" value="<%= @app.dentist_id %>"></h4>
    <h4>Patient ID: <input type="text" class="form-control" placeholder="Patient ID" name="appointment[patient_id]" id="patient_id" value="<%= @app.patient_id %>"></h4>
    <h4>Date: <input type="text" class="form-control" placeholder="Appointment Date" name="appointment[appoinment_date]" id="appoinment_date" value="<%= @app.appoinment_date %>"></h4>
    <input type="submit" class="btn btn-primary" id="Add" value="Submit" name="Add">
</form>